@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Müşteri Yönetimi</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.0/font/bootstrap-icons.min.css" rel="stylesheet">
    <style>
        .main-content {
            margin-right: 100px;
            padding: 0;
        }
    </style>
</head>
<body>
<div class="container">
        <!-- Kart Yapıları Başlangıç -->
        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 mt-5 main-content">
            <div class="row">
                <div class="col-md-4 mb-4">
                    <div class="card border-primary">
                        <div class="card-body text-primary">
                            <i class="bi bi-person-check"></i>
                            <h5 class="card-title">Müşteri Yönetimi</h5>
                            <p class="card-text">Müşterileri ekleyin, düzenleyin ve silin.</p>
                            <a asp-controller="customers" asp-action="Index" class="btn btn-primary">Detaylar</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-4">
                    <div class="card border-info">
                        <div class="card-body text-info">
                            <i class="bi bi-cart3"></i>
                            <h5 class="card-title">Satış Yönetimi</h5>
                            <p class="card-text">Satışları görüntüleyin, yönetin ve ilgilenin.</p>
                            <a href="#" class="btn btn-info">Detaylar</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-4">
                    <div class="card border-secondary">
                        <div class="card-body text-secondary">
                            <i class="bi bi-bar-chart"></i>
                            <h5 class="card-title">Raporlar</h5>
                            <p class="card-text">Çeşitli raporlar oluşturun ve analiz edin.</p>
                            <a href="#" class="btn btn-secondary">Detaylar</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-4">
                    <div class="card border-success">
                        <div class="card-body text-success">
                            <i class="bi bi-calendar-event"></i>
                            <h5 class="card-title">Görev ve Takvim Yönetimi</h5>
                            <p class="card-text">Görevleri ve etkinlikleri planlayın.</p>
                            <a href="#" class="btn btn-success">Detaylar</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-4">
                    <div class="card border-warning">
                        <div class="card-body text-warning">
                            <i class="bi bi-megaphone"></i>
                            <h5 class="card-title">Pazarlama Kampanyaları</h5>
                            <p class="card-text">Pazarlama kampanyalarını yönetin.</p>
                            <a href="#" class="btn btn-warning">Detaylar</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-4">
                    <div class="card border-danger">
                        <div class="card-body text-danger">
                            <i class="bi bi-life-preserver"></i>
                            <h5 class="card-title">Destek ve Bilet Sistemi</h5>
                            <p class="card-text">Müşteri destek taleplerini yönetin.</p>
                            <a href="#" class="btn btn-danger">Detaylar</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-4">
                    <div class="card border-dark">
                        <div class="card-body text-dark">
                            <i class="bi bi-box-seam"></i>
                            <h5 class="card-title">Ürün Yönetimi</h5>
                            <p class="card-text">Ürün bilgilerini ve stokları yönetin.</p>
                            <a href="#" class="btn btn-dark">Detaylar</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-4">
                    <div class="card border-info">
                        <div class="card-body text-info">
                            <i class="bi bi-file-earmark-text"></i>
                            <h5 class="card-title">Teklif ve Fatura Yönetimi</h5>
                            <p class="card-text">Teklifleri ve faturaları yönetin.</p>
                            <a href="#" class="btn btn-info">Detaylar</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-4">
                    <div class="card border-primary">
                        <div class="card-body text-primary">
                            <i class="bi bi-person-lines-fill"></i>
                            <h5 class="card-title">Kullanıcı ve Rol Yönetimi</h5>
                            <p class="card-text">Kullanıcı rollerini ve izinlerini yönetin.</p>
                            <a href="#" class="btn btn-primary">Detaylar</a>
                        </div>
                    </div>
                </div>
            </div>
        </main>
        <!-- Ana İçerik Bitiş -->
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

